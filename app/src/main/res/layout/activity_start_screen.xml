<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/NoActionBarTheme"
    tools:context=".StartScreenActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="@string/game_test"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        app:layout_goneMarginTop="20dp"
        tools:layout_editor_absoluteX="10dp" />

    <ToggleButton
        android:id="@+id/tb_button3"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/tb_button2"
        android:text="@string/hard"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />

    <ToggleButton
        android:id="@+id/tb_button2"
        android:text="@string/medium"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"
        app:layout_constraintLeft_toRightOf="@+id/tb_button1"
        android:layout_marginStart="5dp"
        tools:layout_editor_absoluteX="96dp" />

    <ToggleButton
        android:id="@+id/tb_button1"
        android:layout_width="45dp"
        android:text="@string/easy"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/tb_button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />


</LinearLayout>